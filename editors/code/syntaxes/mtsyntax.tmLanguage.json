{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "MT-Syntax",
    "scopeName": "source.mtsyntax",
    "patterns": [
        {"include": "#all"}
    ],
    "repository": {
        "all": {
            "patterns": [
                {
                    "name": "keyword.control.mtsyntax",
                    "match": "\\b(?:match|name|comment|insertSpace|contains|color|colors|start|end|startsWith|endsWith|builtin|matchEndFirst|mustMatchEnd|codeFormatter|codeShrinker|lineBackground|ignoreCase|hide|addToContains|number|iSuffixes|fSuffixes|recordAllGroups|defines|include|endPriority|style|styles|childrenStyle|bracketPairs)\\b(?!\\()"
                },
                {
                    "name": "keyword.control.mtsyntax",
                    "match": "\\b(?:match|name|comment|insertSpace|contains|color|colors|start|end|startsWith|endsWith|builtin|matchEndFirst|mustMatchEnd|codeFormatter|codeShrinker|lineBackground|ignoreCase|hide|addToContains|number|iSuffixes|fSuffixes|recordAllGroups|defines|include|endPriority|style|styles|childrenStyle|bracketPairs)\\b(?!\\()"
                },
                {
                    "name": "keyword.control.mtsyntax",
                    "match": "\\bgroup:\\s*(link|linkAll|select)",
                    "captures": {
                        "1": {
                            "name": "constant.language.mtsyntax"
                        }
                    }
                },
                {
                    "name": "keyword.control.mtsyntax",
                    "match": "<[^>]+>"
                },
                {
                    "name": "constant.language.mtsyntax",
                    "match": "\\b(?:keywordsToRegex|include)\\b(?=\\()"
                },
                {
                    "name": "constant.language.mtsyntax",
                    "match": "\\b(?:true|false|[0-9]+)\\b"
                },
                {
                    "name": "constant.language.mtsyntax",
                    "match": "[#$@][a-zA-Z0-9]+\\b#?"
                },
                {
                    "begin": "//",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.mtsyntax"
                        }
                    },
                    "end": "\\n",
                    "name": "comment.line.sharp.mtsyntax"
                },
                {
                    "name": "string.quoted.double.mtsyntax",
                    "match": "\"(?:[^\"\\\\]|(\\\\.))*\"",
                    "captures": {
                        "1": {
                            "name": "constant.character.escape.mtsyntax"
                        }
                    }
                },
                {
                    "name": "string.quoted.single.mtsyntax",
                    "match": "/(?:(\\\\/)|[^/])+/",
                    "captures": {
                        "1": {
                            "name": "constant.character.escape.mtsyntax"
                        }
                    }
                }
            ]
        }
    }
}
